<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorSurface</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Detail">
        <item name="android:windowBackground">@color/colorBlack</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.AppBarOverlay.Detail">
        <item name="android:background">@color/colorBlack</item>
    </style>


    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!--This line changes the color of text in Toolbar-->
        <!--        <item name="android:textColorPrimary">@color/colorBlack</item>-->
        <item name="android:background">?colorSurface</item>
    </style>

    <!-- For titles-->
    <style name="TextAppearance.App.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <!-- For smaller titles-->
    <style name="TextAppearance.App.H2" parent="@style/TextAppearance.App.H1">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <!-- For other prominent text -->
    <style name="TextAppearance.App.H3" parent="@style/TextAppearance.App.H1">
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="TextAppearance.App.ListPrimary" parent="TextAppearance.MaterialComponents.Subtitle1" />

    <style name="TextAppearance.App.Main" parent="TextAppearance.MaterialComponents.Subtitle2" />


    <style name="TextAppearance.App.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="ShapeAppearance.Card" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
    </style>


    <!-- For main buttons-->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="cornerRadius">24dp</item>
    </style>


    <!--For Icon Buttons-->
    <style name="Widget.App.Button.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="iconPadding">0dp</item>
        <item name="icon">@drawable/ic_chevron_left</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconGravity">textEnd</item>
    </style>

    <style name="Widget.App.Button.Close" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="iconPadding">0dp</item>
        <item name="icon">@drawable/ic_close</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconGravity">textEnd</item>
    </style>

    <!-- For smaller titles-->
    <style name="TextAppearance.App.Subtitle" parent="@style/TextAppearance.App.H3">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>


</resources>
