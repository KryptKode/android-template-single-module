<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.kryptkode.template.MainActivityViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/root_nav_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_close"
            style="@style/Widget.App.Button.Close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:onClick="@{()-> viewModel.handleStartNavCloseClick()}"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconTint="@color/colorOnPrimary" />

        <TextView
            android:id="@+id/tv_categories"
            style="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="40dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/menu_categories"
            android:textAppearance="@style/TextAppearance.App.H2"
            android:textColor="?colorOnPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorOnPrimary" />

        <FrameLayout
            android:id="@+id/root_start_drawer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</layout>