<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/root_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TODO: Change ImageView to Adjustable ImageView-->
            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
               tools:src="@tools:sample/backgrounds/scenic" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/gradient_bg"
                app:layout_constraintBottom_toBottomOf="@id/img_thumbnail"
                app:layout_constraintEnd_toEndOf="@id/img_thumbnail"
                app:layout_constraintStart_toStartOf="@id/img_thumbnail"
                app:layout_constraintTop_toTopOf="@id/img_thumbnail" />


            <ImageView
                android:id="@+id/img_lock"
                android:layout_width="24dp"
                android:contentDescription="@string/img_lock_content_description"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_lock"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                app:autoSizeMaxTextSize="22sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                android:layout_marginEnd="8dp"
                android:textSize="22sp"
                android:textColor="@color/colorTextOnOverlay"
                android:textAppearance="@style/TextAppearance.App.ListPrimary"
                app:layout_constraintStart_toEndOf="@id/img_lock"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_btn_favourite"
                tools:text="Beauty and the Beast" />


            <CheckBox
                android:id="@+id/img_btn_favourite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:checked="true"
                android:background="?selectableItemBackgroundBorderless"
                android:button="@drawable/btn_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>